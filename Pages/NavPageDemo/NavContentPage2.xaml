<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPages.Pages.NavPageDemo.NavContentPage2"
             Title="NavContentPage2"
             BackgroundColor="#0a5230">
    <VerticalStackLayout>
        <Label 
            Text="This is Content Page 2"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            HorizontalOptions="Center" />
        <Button
            x:Name="navContentPage3Button"
            Text="Open Content Page 3"
            Margin="20"
            Clicked="navContentPage3Button_Clicked"></Button>
        <Button
            x:Name="closeButton"
            Text="Close Me"
            Margin="20"
            Clicked="closeButton_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>